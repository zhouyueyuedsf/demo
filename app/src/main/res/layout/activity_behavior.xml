<?xml version="1.0" encoding="utf-8"?>
<com.example.demo.behaviors.DraggableCoordinatorLayout
        android:id="@+id/dclFrame"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".behaviors.BehaviorActivity">
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:visibility="invisible"
            app:layout_behavior=".behaviors.FlTransformationSheetBehavior"
            android:id="@+id/cardViewFrame"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <com.example.demo.behaviors.ExpandRevealFrameLayout
            android:id="@+id/erfl"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:background="@color/colorAccent"/>

</com.example.demo.behaviors.DraggableCoordinatorLayout>