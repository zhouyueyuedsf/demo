<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ViewActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trigger" />

    <TextView
        android:layout_marginTop="100dp"
        android:text="123412321312312"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.demo.views.importantview.OcrResultEditText
        android:id="@+id/etOcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Ocr Result EditText"
        android:inputType="textMultiLine" />


    <com.example.demo.views.importantview.AutoFitSizeEditText
        android:id="@+id/etTest"
        android:layout_marginTop="300dp"
        android:hint="input your text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">
        <Button
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.example.demo.views.importantview.RippleButton
        android:text="RippleButton"
        android:layout_marginTop="400dp"
        android:textColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"
        app:solid_color="@color/colorPrimary"
        app:solid_corner="4dp"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>