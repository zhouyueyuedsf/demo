<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ViewActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trigger" />

    <Button
        android:id="@+id/button2"
        android:layout_marginTop="50dp"
        android:text="Trigger2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="100dp"
        android:text="123412321312312"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.example.demo.views.importantview.OcrResultEditText
        android:id="@+id/etOcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Ocr Result EditText"
        android:inputType="textMultiLine" />


    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_marginTop="300dp"

        android:background="@drawable/bg_grey_radius_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.example.demo.views.importantview.AutoFitSizeTextView
            android:id="@+id/etTest"
            android:background="@null"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:text="input your text"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </FrameLayout>



</FrameLayout>