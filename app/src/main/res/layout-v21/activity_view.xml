<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context=".views.ViewActivity">

    <Button
        android:id="@+id/button1"
        android:text="recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->


    <com.example.demo.views.importantview.RoundSmoothAngleImageView
        android:id="@+id/roundSmoothAngleImageView"
        app:globalRadius="4dp"
        android:padding="1.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.demo.views.hindictocrlab.VerticalTextView
        android:layout_width="wrap_content"
        android:text="4fsdfa1"
        android:layout_height="wrap_content"/>

    <com.example.demo.views.hindictocrlab.OcrGridLineView
        android:id="@+id/view_ocr_grid_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="62dp"
        app:linesColor="@color/colorAccent"
        app:linesWidth="0.5dp"
        app:textMarginBottom="8dp"
        app:tipTextPadding="16dp"
        app:tipTextColor="@color/colorAccent"
        app:tipText="@string/ocr_guide_line_tip"
        app:tipTextSize="14sp" />

    <com.example.demo.views.hindictocrlab.ScannerBarView
        android:id="@+id/scannerBarView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
