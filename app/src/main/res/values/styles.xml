<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/defaultCursorColor</item>
    </style>

    <style name="defaultCursorColor" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
    </style>

    <declare-styleable name="MyFlowLayout">
        <attr name="line_spacing" format="dimension|reference"/>
        <attr name="item_spacing" format="dimension|reference"/>
    </declare-styleable>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="EllipsizeTextView">
        <attr name="ellipsize_text" format="string|reference"/>
        <attr name="ellipsize_index" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="OcrGridLineView">
        <attr name="linesWidth" format="dimension" />
        <attr name="tipTextSize" format="dimension" />
        <attr name="textMarginBottom" format="dimension" />
        <attr name="tipText" format="reference" />
        <attr name="tipTextColor" format="color|reference" />
        <attr name="tipTextPadding" format="dimension|reference" />
        <attr name="linesColor" format="color|reference" />
    </declare-styleable>


    <declare-styleable name="ScannerBarView">
        <attr name="sbvSrc" format="reference"/>
    </declare-styleable>

    <!--抗锯齿圆角图片-->
    <declare-styleable name="RoundSmoothAngleImageView">
        <attr name="globalRadius" format="dimension" />
        <attr name="leftTopRadius" format="dimension" />
        <attr name="rightTopRadius" format="dimension" />
        <attr name="rightBottomRadius" format="dimension" />
        <attr name="LeftBottomRadius" format="dimension" />
    </declare-styleable>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@drawable/md_corner_shape</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="AVLoadingIndicatorView">
        <item name="AvMinWidth">48dip</item>
        <item name="AvMaxWidth">48dip</item>
        <item name="AvMinHeight">48dip</item>
        <item name="AvMaxHeight">48dip</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="AvMinWidth">11dp</item>
        <item name="AvMaxWidth">24dip</item>
        <item name="AvMinHeight">11dp</item>
        <item name="AvMaxHeight">24dip</item>
    </style>

</resources>
