<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/defaultCursorColor</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:statusBarColor">@color/black</item>-->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="defaultCursorColor" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
    </style>

    <declare-styleable name="MyFlowLayout">
        <attr name="line_spacing" format="dimension|reference"/>
        <attr name="item_spacing" format="dimension|reference"/>
    </declare-styleable>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="EllipsizeTextView">
        <attr name="ellipsize_text" format="string|reference"/>
        <attr name="ellipsize_index" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="OcrGridLineView">
        <attr name="linesWidth" format="dimension" />
        <attr name="tipTextSize" format="dimension" />
        <attr name="textMarginBottom" format="dimension" />
        <attr name="tipText" format="reference" />
        <attr name="tipTextColor" format="color|reference" />
        <attr name="tipTextPadding" format="dimension|reference" />
        <attr name="linesColor" format="color|reference" />
    </declare-styleable>

    <attr name="fitLine" format="integer"/>
    <attr name="minTextSize" format="dimension|reference"/>

    <declare-styleable name="AutoFitSizeEditText">
        <attr name="fitLine" />
        <attr name="hintTextSize" format="reference|dimension" />
        <attr name="minTextSize" />
    </declare-styleable>

    <declare-styleable name="ScannerBarView">
        <attr name="sbvSrc" format="reference"/>
    </declare-styleable>

    <!--抗锯齿圆角图片-->
    <declare-styleable name="RoundSmoothAngleImageView">
        <attr name="globalRadius" format="dimension" />
        <attr name="leftTopRadius" format="dimension" />
        <attr name="rightTopRadius" format="dimension" />
        <attr name="rightBottomRadius" format="dimension" />
        <attr name="LeftBottomRadius" format="dimension" />
    </declare-styleable>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@drawable/md_corner_shape</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="AVLoadingIndicatorView">
        <item name="AvMinWidth">48dip</item>
        <item name="AvMaxWidth">48dip</item>
        <item name="AvMinHeight">48dip</item>
        <item name="AvMaxHeight">48dip</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="AvMinWidth">11dp</item>
        <item name="AvMaxWidth">24dip</item>
        <item name="AvMinHeight">11dp</item>
        <item name="AvMaxHeight">24dip</item>
    </style>

    <declare-styleable name="AutoFitSizeTextView">
        <attr name="fitLine" />
        <attr name="addEllipsis" format="boolean" />
        <attr name="minTextSize" />
    </declare-styleable>

    <style name="Theme.DialogActivity" parent="AlertDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Button文字的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- message的颜色 -->
        <item name="android:textColorPrimary">#757575</item>
    </style>

    <declare-styleable name="RippleButton">
        <attr name="stroke_color" format="color|reference" />
        <attr name="stroke_width" format="dimension|reference" />
        <attr name="solid_color" format="color|reference" />
        <attr name="solid_corner" format="dimension|reference" />
    </declare-styleable>

</resources>
